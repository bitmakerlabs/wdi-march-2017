<h1>Pages</h1>

<p>
  <%= link_to 'New Page', new_page_path %>
</p>

<ul>
  <% Page.all.each do |page| %>
    <li>
      <%= link_to page.title, page_path(page.slug) %> |
      <%= link_to 'Edit', edit_page_path(page) %> |
      <%= link_to 'Delete',  page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>


